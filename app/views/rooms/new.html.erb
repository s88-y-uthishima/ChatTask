<div class="main">
  <div class="inner">
    <div class="form_wrapper">
      <h2 class="page_heading">新規ROOM作成</h2>
        <div class="actions">
          <%= form_with model: @room, local: true do |f| %>
            <%= f.text_field :name, class: :room__name, placeholder: "店舗名を入力してください" %>
            <%= f.submit "保存する", class: :form__btn %>
          <% end %>
        </div>
    </div>
  </div>
</div>