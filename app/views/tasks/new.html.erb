<div class="listnewPage">
  <div class="container">
    <%= form_with model: @task , url: { action: :create }, class: "new_list", local: true do |f| %>
      <% if @task.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <%= f.label :title %>
      <%#= hidden_field_tag :room_id, @room.id  %>
      <%= f.text_field :title, autofocus: true, class: "form-control listName", placeholder: "タスク名" %>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>